<div class="d-flex justify-content-between align-items-center  m-3 ">
    <h1 class="">Todas tus Situaciones
    </h1>
    <a class="btn btn-primary btn-block btn-sm" href="/sit/add">Agregar otra</a> 
</div>
<div class="row m-3">
    {{#each situations}}
        <div class="col-md-3 p-2">
            <div class="card d-flex justify-content-between">
                <div class="card-body">
                    <p>{{situation}} </p>    
                    <div class="d-flex justify-content-between">
                        <form class="d-inline" action="/sit/delete/{{_id}}?_method=DELETE" method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
                        </form>
                        <a class="d-inline" href="/sit/edit/{{_id}}">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                            <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                            </svg>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>