<div class="row p-2">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header bg-secondary">
                Registrate
            </div>
            <div class="card-body pt-2">
                <form action="/signUp" method="POST">
                    <div class="form-grup pt-2">
                        <input type="text" class="form-control" name="name" placeholder="Ingresa tu nombre" value="{{name}}">
                    </div>
                    <div class="form-grup pt-2">
                        <input type="text" class="form-control" name="email" placeholder="Ingresa tu mail" value="{{email}}">
                    </div>
                    <div class="form-grup pt-2">
                        <input type="password" class="form-control" name="password" placeholder="Ingresa tu contraseña" value="{{password}}">
                    </div>
                    <div class="form-grup pt-2">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Confirma tu contraseña" value="{{confirm_password}}">
                    </div>
                    <div class="d-grid gap-2 m-2">
                        <button class="btn btn-success" >Confirmar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>